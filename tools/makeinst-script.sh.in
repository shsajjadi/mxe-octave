    ReadRegStr \$0 SHCTX "Software\\Classes\\.m" ""
    StrCmp "\$0" "" ctx_no_back_type
    WriteRegStr SHCTX "Software\\Classes\\.m" "backup_val" "\$0"
ctx_no_back_type:
    WriteRegStr SHCTX "Software\\Classes\\.m" "" "Octave.Document.$VERSION"

